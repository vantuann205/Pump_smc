{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_BLOCKFROST_API_KEY": "@blockfrost_api_key",
    "NEXT_PUBLIC_NETWORK_ID": "0"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_BLOCKFROST_API_KEY": "@blockfrost_api_key",
      "NEXT_PUBLIC_NETWORK_ID": "0"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}